{
	"name": "slack-webhooks",
	"version": "3.0.0",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "yarn build && companion-module-build",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-slack-webhooks.git"
	},
	"license": "MIT",
	"dependencies": {
		"@companion-module/base": "~1.12.1",
		"@slack/webhook": "^7.0.5"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.3.0",
		"@types/node": "^22.16.5",
		"eslint": "^9.31.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0"
	},
	"engines": {
		"node": "^22.12"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"packageManager": "yarn@4.5.3",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	}
}
